# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_IDS=123456789,987654321,555666777

# Database Configuration
DATABASE_URL=sqlite:///helpdesk.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/helpdesk

# Web Panel Configuration
DJANGO_SECRET_KEY=your_django_secret_key_here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com

# 1C Integration (optional)
ONE_C_URL=http://your-1c-server.com/your_base
ONE_C_USER=your_1c_username
ONE_C_PASSWORD=your_1c_password

# Logging Configuration
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# SLA Configuration
SLA_NOTIFICATION_HOURS=1
SLA_ESCALATION_HOURS=4

# File Upload Configuration
MAX_FILE_SIZE=20971520  # 20MB in bytes
UPLOAD_PATH=./uploads

# Security Configuration
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False